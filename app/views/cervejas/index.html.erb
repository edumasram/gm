<h1>Listing cervejas</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Descricao</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cervejas.each do |cerveja| %>
  <tr>
    <td><%= cerveja.nome %></td>
    <td><%= cerveja.descricao %></td>
    <td><%= link_to 'Show', cerveja %></td>
    <td><%= link_to 'Edit', edit_cerveja_path(cerveja) %></td>
    <td><%= link_to 'Destroy', cerveja, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

